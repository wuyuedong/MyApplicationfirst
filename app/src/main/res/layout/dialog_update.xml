<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lLayout_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="65dip"
        android:background="@drawable/corners_bg2"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_to_dip_110">

            <TextView
                android:id="@+id/txt_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dip"
                android:text="标题"
                android:textColor="@color/title"
                android:textSize="@dimen/font_size_px_32" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/px_to_dip_20"
            android:layout_marginLeft="@dimen/px_to_dip_20"
            android:layout_marginRight="@dimen/px_to_dip_20"
            android:layout_marginTop="@dimen/px_to_dip_18"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text=""
                android:textColor="@color/title"
                android:textSize="@dimen/font_size_px_32" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#d8d8d8" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/px_to_dip_10">

            <Button
                android:id="@+id/btn_neg"
                android:layout_width="0dp"
                android:layout_height="@dimen/px_to_dip_90"
                android:layout_weight="1"
                android:background="@null"
                android:text="取消"
                android:textColor="#9b9b9b" />

            <ImageView
                android:id="@+id/img_line"
                android:layout_width="@dimen/px_to_dip_1"
                android:layout_height="match_parent"
                android:background="#d8d8d8" />

            <Button
                android:id="@+id/btn_pos"
                android:layout_width="0dp"
                android:layout_height="@dimen/px_to_dip_90"
                android:layout_weight="1"
                android:background="@null"
                android:text="确定"
                android:textColor="#39ceff" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>