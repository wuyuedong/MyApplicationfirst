<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginRight="120dip"
        android:src="@mipmap/img" />

    <com.example.myapplication.ClickableSlidingDrawer
        android:id="@+id/drawer"
        android:layout_width="280dip"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:allowSingleTap="false"
        android:content="@+id/content"
        android:handle="@+id/handle"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@id/handle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/colorWhite"
            android:padding="10dip">


            <TextView
                android:id="@+id/bt_text1"
                android:layout_width="wrap_content"
                android:layout_height="30dip"
                android:background="@color/colorWhite"
                android:gravity="center_vertical"
                android:text="默认界面1 "
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/bt_text2"
                android:layout_width="wrap_content"
                android:layout_height="30dip"
                android:layout_marginLeft="20dip"
                android:layout_toRightOf="@id/bt_text1"
                android:background="@color/colorWhite"
                android:gravity="center_vertical"
                android:text="默认界面2 "
                android:textColor="@color/black" />

            <ImageButton
                android:id="@+id/bt_text5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_below="@id/bt_text1"
                android:layout_marginTop="50dip"
                android:background="@null"
                android:src="@mipmap/ic_launcher" />

            <ImageButton
                android:layout_marginLeft="50dp"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/bt_text5"
                android:layout_marginTop="90dip"
                android:background="@null"
                android:src="@mipmap/ic_launcher" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@id/content"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/colorWhite"
            android:padding="10dip">


            <TextView
                android:id="@+id/bt_text3"
                android:layout_width="wrap_content"
                android:layout_height="30dip"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dip"
                android:background="@color/colorWhite"
                android:gravity="center_vertical"
                android:text="默认界面2 "
                android:textColor="@color/black" />

            <ImageButton
                android:id="@+id/bt_text6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/bt_text3"
                android:layout_centerHorizontal="true"
                android:layout_marginRight="20dip"
                android:layout_marginTop="50dip"
                android:background="@null"
                android:src="@mipmap/ic_launcher" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/bt_text6"
                android:layout_centerHorizontal="true"
                android:layout_marginRight="20dip"
                android:layout_marginTop="90dip"
                android:background="@null"
                android:src="@mipmap/ic_launcher" />


        </RelativeLayout>

    </com.example.myapplication.ClickableSlidingDrawer>

</RelativeLayout>